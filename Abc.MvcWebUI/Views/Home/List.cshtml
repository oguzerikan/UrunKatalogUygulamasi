@using Abc.MvcWebUI.Models
@model IEnumerable<ProductModel>
@{
    ViewBag.Title = "List";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-3">
            @Html.Action("GetCategories","Home")
        </div>

        <div class="col-md-9">
            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-circle mr-2"></i> Bu kategoride bir ürün bulunamadı!
                </div>
            }
            else
            {
                <div class="alert alert-success" role="alert">
                    <i class="fas fa-check-circle mr-2"></i> <strong>@Model.Count() adet</strong> ürün bulundu.
                </div>
            }
            @Html.Partial("_ProductList", Model)
        </div>
    </div>
</div>
