@using Abc.MvcWebUI.Entity
@model Product
@{
    ViewBag.Title = "Details";
}

<div id="product-details" class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <div class="container">
                <img src="~/Upload/@Model.Image" class="img-fluid rounded">
            </div>
        </div>
        <div class="col-md-6">
            <div class="container">
                <h2>@Model.Name</h2>
                <hr class="border-top border-primary">
                @if (Model.IsApproved)
                {
                    <span class="badge badge-primary mb-3 mr-3">Stokta</span>
                }
                else
                {
                    <span class="badge badge-danger mb-3 mr-3">Stokta Yok</span>
                }

                <span class="product-number">Zoom Lens 50x15</span>
                <p id="description">
                    @Model.Description
                </p>
                <div class="row">
                    <div class="col-md-4">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star-half-alt"></i>
                        <span class="badge badge-success ml-2">54</span>
                    </div>
                    <div class="col-md-4">
                        <a href="#" class="text-decoration-none">Write a Review</a>
                    </div>
                </div>
                <hr class="border-top border-primary">
                <h1 id="product-price" class="text-primary"> @Model.Price ₺ </h1>
                <hr class="border-top border-primary">
                @using (Html.BeginForm("AddToCart", "Cart"))
                {
                    @Html.HiddenFor(i => i.Id)
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-shopping-cart mr-2"></i>Add to
                        Cart
                    </button>
                }

            </div>
        </div>
    </div>
    <div class="row my-5">
