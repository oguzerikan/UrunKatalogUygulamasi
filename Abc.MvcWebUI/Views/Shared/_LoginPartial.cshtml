

<ul class="navbar-nav my-2 my-lg-0">
    @if (Request.IsAuthenticated)
    {
        // Kullanıcı Adı ve Logout Linklerini Çıkar.
        <li class="nav-item">
            <a class="nav-link" href="/Account">@User.Identity.Name</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="/Account/Logout">Logout</a>
        </li>

    }
    else
    {
        // Login ve Register Linklerini Çıkar.
        <li class="nav-item">
            <a class="nav-link" href="/Account/Login">Login</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="/Account/Register">Register</a>
        </li>

    }



</ul>